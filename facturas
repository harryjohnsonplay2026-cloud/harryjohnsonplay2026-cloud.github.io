<div class="modal-overlay" id="confirmModal">
<div class="modal-box">
<h3 style="color:var(--color-secondary)">Confirmar Datos</h3>

<p>¬øEst√°s seguro que la informaci√≥n y los archivos adjuntos son correctos?</p>

<div class="loader" id="loaderSpinner">&nbsp;</div>

<div class="modal-buttons" id="modalBtns"><button class="btn-cancel" onclick="closeModal()">Cancelar</button><button class="btn-confirm" onclick="submitFormReal()">S√≠, Enviar</button></div>
</div>
</div>
<script>
    const form = document.getElementById('billingForm');
    const modal = document.getElementById('confirmModal');
    const formView = document.getElementById('formView');
    const successView = document.getElementById('successView');
    const loader = document.getElementById('loaderSpinner');
    const modalBtns = document.getElementById('modalBtns');

    // L√≥gica para mostrar/ocultar el campo "Otro" en CFDI
    const selectCFDI = document.getElementById('usoCfdiSelect');
    const inputCFDI = document.getElementById('otroCfdiInput');

    selectCFDI.addEventListener('change', function() {
        if (this.value === 'Otro') {
            inputCFDI.style.display = 'block';
            inputCFDI.required = true; // Se vuelve obligatorio llenar este campo
        } else {
            inputCFDI.style.display = 'none';
            inputCFDI.required = false; // Ya no es obligatorio
            inputCFDI.value = ''; // Borramos lo que haya escrito para no enviar basura
        }
    });

    // 1. Interceptar el env√≠o
    form.addEventListener('submit', function(e) {
        e.preventDefault(); // Detener env√≠o autom√°tico
        modal.style.display = 'flex'; // Mostrar modal
    });

    // 2. Funci√≥n para cerrar modal
    function closeModal() {
        modal.style.display = 'none';
    }

    // 3. Funci√≥n para enviar realmente (AJAX)
    function submitFormReal() {
        // Mostrar spinner y ocultar botones
        loader.style.display = 'block';
        modalBtns.style.display = 'none';

        const formData = new FormData(form);

        fetch(form.action, {
            method: 'POST',
            body: formData,
            headers: {
                'Accept': 'application/json'
            }
        })
        .then(response => {
            if (response.ok) {
                // √âxito
                closeModal();
                form.reset(); // Limpiar formulario
                formView.style.display = 'none'; // Ocultar form
                successView.style.display = 'block'; // Mostrar √©xito
            } else {
                alert("Hubo un error al enviar. Por favor intenta de nuevo.");
                closeModal();
                resetModalState();
            }
        })
        .catch(error => {
            alert("Hubo un error de conexi√≥n.");
            console.error(error);
            closeModal();
            resetModalState();
        });
    }

    function resetModalState() {
        loader.style.display = 'none';
        modalBtns.style.display = 'flex';
    }

    // Cerrar modal si se hace clic afuera
    window.onclick = function(event) {
        if (event.target == modal) {
            closeModal();
        }
    }
</script>
